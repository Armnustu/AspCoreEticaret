@model Products
@{
   
    ViewData["Title"] = "ProductEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!-- BEGIN PAGE CONTENT-->
<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> ÜRÜN GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/ProductEdit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   @* <input type="hidden" asp-for="ProductID" value="@Model.ProductID"*@>
                    <div class="form-body">
                        <div class="form-group">
                            <label asp-for="ProductID" class="col-md-3 control-label">ÜRÜN ID</label>
                            <div class="col-md-9">
                                <input asp-for="ProductID" class="form-control input-lg" placeholder="Ürün ID" required maxlength="100" />
                            </div>
                            <span asp-validation-for="ProductID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductName" class="col-md-3 control-label">ÜRÜN ADI</label>
                            <div class="col-md-9">
                                <input asp-for="ProductName" class="form-control input-lg" placeholder="Ürün Adı" required maxlength="100" />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitPrice" class="col-md-3 control-label">FİYAT</label>
                            <div class="col-md-9">
                                <input asp-for="UnitPrice" class="form-control input-lg" placeholder="Fiyat" required />
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">KATEGORİ SEÇİNİZ</label>
                            <div class="col-md-9">
                                @Html.DropDownList("CategoryID", (IEnumerable<SelectListItem>)ViewData["categoriList"], "Seçiniz", new { @class = "form-control input-lg" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">MARKA SEÇİNİZ</label>
                            <div class="col-md-9">
                                @*  @Html.DropDownList("SupplierID", (IEnumerable<SelectListItem>)ViewData["supplierList"], "Seçiniz", new { @class = "form-control input-lg" })*@
                                @Html.DropDownListFor(model => model.SupplierID, ViewBag.SupplierID as IEnumerable<SelectListItem>, "Select Supplier",new { @class = "form-control input-lg" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock" class="col-md-3 control-label">STOK</label>
                            <div class="col-md-9">
                                <input asp-for="Stock" class="form-control input-lg" placeholder="Stok" required onkeypress="return numberonly(this, event);" />
                            </div>

                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Discount" class="col-md-3 control-label">İNDİRİM</label>
                            <div class="col-md-9">
                                <input asp-for="Discount" class="form-control input-lg" placeholder="İndirim" />
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label class="col-md-3 control-label">STATÜ SEÇİNİZ</label>
                            <div class="col-md-9">
                                @Html.DropDownList("StatusID", (IEnumerable<SelectListItem>)ViewData["statusList"], "Seçiniz", new { @class = "form-control input-lg" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Keywords" class="col-md-3 control-label">ANAHTAR KELİME</label>
                            <div class="col-md-9">
                                <input asp-for="Keywords" class="form-control input-lg" placeholder="Anahtar Kelimeler" />
                            </div>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Kdv" class="col-md-3 control-label">KDV</label>
                            <div class="col-md-9">
                                <input asp-for="Kdv" class="form-control input-lg" placeholder="Kdv" />
                            </div>
                            <span asp-validation-for="Kdv" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Related" class="col-md-3 control-label">BUNA BAKANLAR</label>
                            <div class="col-md-9">
                                <input asp-for="Related" class="form-control input-lg" placeholder="Buna Bakanlar" />
                            </div>
                            <span asp-validation-for="Related" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Notes" class="col-md-3 control-label">NOT</label>
                            <div class="col-md-9">
                                <input asp-for="Notes" class="form-control input-lg" placeholder="Notlar" />
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label">RESİM SEÇİNİZ</label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg" />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                    </div>
                   
                    <div class="form-actions right1">
                        <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                        <input type="submit" name="name" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>



